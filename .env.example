# API Configuration
# For local development (default):
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# For production (uncomment and update with your backend URL):
# REACT_APP_API_URL=https://your-backend.onrender.com
# REACT_APP_WS_URL=wss://your-backend.onrender.com

# App Configuration
REACT_APP_APP_NAME=Yeet Bank
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_CHAT=true

# JWT Configuration
REACT_APP_JWT_EXPIRY=3600

# Analytics (optional)
REACT_APP_ANALYTICS_ID=

# VAPID Public Key for Push Notifications (optional, if using push notifications)
# Get this from your backend VAPID_PUBLIC_KEY
# REACT_APP_VAPID_PUBLIC_KEY=your-vapid-public-key-here
